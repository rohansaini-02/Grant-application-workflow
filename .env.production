# Production Environment Variables
# Copy this to .env and fill in your production values

# SECURITY - CHANGE THESE!
SECRET_KEY=your-super-secret-production-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database (use your production database URL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Email (configure for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
ADMIN_EMAIL=admin@your-domain.com

# Security cookies (set to True in production with HTTPS)
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Site name
SITE_NAME=Grant Application Workflow

# File uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,image/jpeg,image/png
